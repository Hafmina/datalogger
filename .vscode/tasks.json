{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate Statemachine Graph",
            "type": "shell",
            "command": "python -m statemachine.contrib.diagram tasks.datalogger.Datalogger ../sm_graph.png",
            "options": {
                "cwd": "${workspaceFolder}/source"
            },
            "icon": {
                "color": "terminal.ansiGreen",
                "id": "graph"
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
